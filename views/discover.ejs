<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <style>
        .child{
            border:0px solid black
        }
        
    </style>
    </head>
    <body>
        <%= search %>
        <div class="search p-5">
            <form action="/discover">
              <input type="text"  name="search" class="form-control"  placeholder="search movies">
            <br>
            <button class="btn btn-danger form-control">search</button>
            </form>
        </div>
        <div class="row container-fluid">
            <% data.forEach(
                datas => {%>
                 <div class="col-4 child d-flex flex-column align-items-center justify-content-center mb-3">
                    <img src="https://image.tmdb.org/t/p/w185/<%=datas.poster_path %>" style="width:200px;">
                    <h1><%= datas.original_title %></h1>
                    <div>
                        <button id="<%= datas.id %>" class="btn btn-success">add to watchlist</button>
                        <button id="<%= datas.id %>" class="btn btn-danger">add to watchedlist</button>

                    </div>
                </div>
                <%}
            )
            %>
        </div>
     
    </body>
    
    
</html>

