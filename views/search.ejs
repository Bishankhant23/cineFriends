<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    </head>
    <body>
        <div class="p-5">
            <center><h2>Search Movies</h2></center><br>
            <form action="/searchMovies" method="post">
            <input type="text" class="form-control" name="search" placeholder="search"><br>
            <input type="submit" value="search" class="form-control btn btn-danger">
            </form>
            <div class="row">
                <% if(data.results.length>0){%>
                 <% data.results.forEach(
                datas => {%>
                 <div class="col-4 child d-flex flex-column align-items-center justify-content-center mb-3">
                    <img src="https://image.tmdb.org/t/p/w185/<%=datas.poster_path %>" style="width:200px;">
                    <h1><%= datas.original_title %></h1>
                    <div>
                    <a href="/addToWatchList/<%= datas.id %>"><button id="<%= datas.id %>" class="btn btn-success">add to watchlist</button></a>
                        <button id="<%= datas.id %>" class="btn btn-danger">add to watchedlist</button>

                    </div>
                </div>
                <%}) }%>

            </div>
        </div>
    </body>
</html>